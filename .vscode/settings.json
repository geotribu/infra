{
    "git.enableCommitSigning": true,
    "editor.formatOnSave": true,
    "autoDocstring.docstringFormat": "one-line-sphinx",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ]
}
